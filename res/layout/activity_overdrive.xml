<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_overdrive"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OverdriveActivity"
    android:keepScreenOn="true" >

   	   <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
       android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/blank_background"
        android:src="@drawable/button_play"
        android:textColorHint="@color/black_overlay" />
    
    
    <ImageButton
        android:id="@+id/acceleroTremeloRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/blank_background"
        android:src="@drawable/button_keep"
        android:textColorHint="@color/black_overlay" />


    
        <ImageButton
        android:id="@+id/led"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blank_background"
        android:src="@drawable/led"
        android:textColorHint="@color/black_overlay" />
    

    <ImageButton
        android:id="@+id/startLoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:background= "@drawable/blank_background"
        android:src="@drawable/silver_button"
        android:textColorHint="@color/black_overlay" />

    <ImageButton
        android:id="@+id/overdriveRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/button_overdrive"
        android:textColorHint="@color/black_overlay" />

</RelativeLayout>